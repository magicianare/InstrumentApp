<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ff000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.01"
        android:orientation="vertical"
        android:weightSum="1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:background="#ffffffff"
            android:stretchColumns="*">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffffffff" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:background="#FF000000"
                    android:layout_marginBottom="0.1dp"
                    android:layout_marginLeft="0.1dp"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sound"
                    android:textColor="#FFFFFFFF"
                    android:background="#ff000000"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="X"
                    android:textColor="#FFFFFFFF"
                    android:background="#ff000000"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Y"
                    android:textColor="#FFFFFFFF"
                    android:background="#ff000000"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Z"
                    android:textColor="#FFFFFFFF"
                    android:background="#ff000000"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:gravity="center"
                    android:textSize="15dp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffffffff" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Min"
                    android:padding="3dp"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#ffcccccc"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/sMin"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#FFCCCCCC"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/xMin"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#FFCCCCCC"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/yMin"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#FFCCCCCC"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/zMin"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#FFCCCCCC"
                    android:gravity="center"
                    android:textSize="15dp" />
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#ffffffff" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Max"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#FFCCCCCC"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/sMax"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#FFCCCCCC"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/xMax"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#FFCCCCCC"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/yMax"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#FFCCCCCC"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:id="@+id/zMax"
                    android:layout_marginLeft="0.1dp"
                    android:layout_marginBottom="0.1dp"
                    android:background="#FFCCCCCC"
                    android:gravity="center"
                    android:textSize="15dp" />
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/main_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.7">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:id="@+id/sub_layout"
            android:visibility="gone">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.05"></LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                android:background="#ffffffff"
                android:stretchColumns="*"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ffffffff" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:background="#FF000000"
                        android:layout_marginBottom="0.1dp"
                        android:layout_marginLeft="0.1dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Sound"
                        android:textColor="#FFFFFFFF"
                        android:background="#ff000000"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="X"
                        android:textColor="#FFFFFFFF"
                        android:background="#ff000000"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Y"
                        android:textColor="#FFFFFFFF"
                        android:background="#ff000000"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Z"
                        android:textColor="#FFFFFFFF"
                        android:background="#ff000000"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:gravity="center"
                        android:textSize="15dp" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ffffffff" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Min"
                        android:padding="3dp"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#ffcccccc"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/rsMin"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#FFCCCCCC"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/rxMin"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#FFCCCCCC"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/ryMin"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#FFCCCCCC"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/rzMin"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#FFCCCCCC"
                        android:gravity="center"
                        android:textSize="15dp" />
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#ffffffff" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Max"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#FFCCCCCC"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/rsMax"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#FFCCCCCC"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/rxMax"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#FFCCCCCC"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/ryMax"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#FFCCCCCC"
                        android:gravity="center"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="0"
                        android:id="@+id/rzMax"
                        android:layout_marginLeft="0.1dp"
                        android:layout_marginBottom="0.1dp"
                        android:background="#FFCCCCCC"
                        android:gravity="center"
                        android:textSize="15dp" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/sub_chart"
                android:layout_weight="0.53"
                android:weightSum="1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/sub_s"
                    android:background="#ff555555"
                    android:layout_weight="0.15"></LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/sub_x"
                    android:background="#ff555555"
                    android:layout_weight="0.15">

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/sub_y"
                    android:background="#ff555555"
                    android:layout_weight="0.15" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.15"
                    android:id="@+id/sub_z"
                    android:background="#ff555555" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/menu"
            android:background="#ff555555">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:id="@+id/start"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="||"
                android:id="@+id/pause"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="85dp"
                android:textColor="#ff0000ff"
                android:layout_marginTop="10dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/radioGroup"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sound"
                    android:id="@+id/S"
                    android:checked="true" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:id="@+id/X"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:checked="false"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y"
                    android:id="@+id/Y"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Z"
                    android:id="@+id/Z"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:checked="false" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:id="@+id/all"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:checked="false" />

            </RadioGroup>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ã…"
                android:id="@+id/stop"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="150dp"
                android:textColor="#ffff0000"
                android:layout_marginTop="10dp" />

            <Button
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="O"
                android:id="@+id/record"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="10dp"
                android:textColor="#ffff0000" />

        </GridLayout>

    </LinearLayout>

</LinearLayout>